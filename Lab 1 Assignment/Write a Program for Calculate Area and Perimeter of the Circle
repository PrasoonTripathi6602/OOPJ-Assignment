#include<stdio.h>
 
int main() 
{
 
   int rad;
   float PI = 3.14, area, circum;
 
   printf("\nEnter radius of circle: ");
   scanf("%d", &rad);
 
   area = PI * rad * rad;
   printf("\nArea of circle : %f ", area);
 
   circum = 2 * PI * rad;
   printf("\nCircumference : %f ", circum);
 
   return (0);
}
